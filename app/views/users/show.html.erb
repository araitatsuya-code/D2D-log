<% provide(:title, @user.name) %>
<div class="container">
<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
    <img src="<%= @user.image %>" width="100" height="100" >
      <h1>
        <%= @user.name %>さんの記録
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>

  </aside>
  <div class="col-md-6">
  <%= render 'layouts/figure' %> 
  </div>
  <div class="col-md-12">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>投稿一覧 (<%= @user.microposts.count %>)</h3>
      <%= render 'users/search' %>
  <div class="row">
    <div class="col">
      <%= render 'layouts/log' %>
    </div>
  </div>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
</div>