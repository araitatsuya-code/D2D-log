<header>
  <div class="container">
    <nav  class="navbar navbar-dark navbar-expand-sm bg-dark fixed-top navbar-extend ">
        <%= link_to "sample app", root_path, id: "logo", class: "navbar-brand" %>
        <%= link_to "Home", root_path ,class: "nav-item nav-link" %>
        <%= link_to "Help", help_path ,class: "nav-item nav-link" %>
          <% if logged_in? %>
            <%= link_to "Users", users_path,class: "nav-item nav-link" %>
              <button class="navbar-toggler" data-toggle="collapse" data-target="#menu">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div id="menu" class="collapse navbar-collapse ">
                <ul class="navbar-nav navbar-nav-extend ml-auto">
                  <li class="nav-item nav-item-extend nav-link"><%= link_to "Profile", current_user %></li>
                  <li class="nav-item nav-item-extend nav-link"><%= link_to "Settings", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li class="nav-link">
                    <%= link_to "Log out", logout_path, method: :delete %>
                  </li>
                </ul>
              </div>
          <% else %>
            <li class="class="nav-item nav-item-extend><%= link_to "Log in", login_path %></li>
          <% end %>
    </nav>
  </div>
</header>