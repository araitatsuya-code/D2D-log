<% provide(:title, 'todo編集') %>
  <div class="edit-title container ">
    <h1 class="form-title form-title-edit">todo編集</h1>
  </div>
  <%= form_with(model: @task, local: true) do |form| %>
  <div class="container ">
    <div class="col-md-12">
      <section class="card">
        <h2 class="card-header form-title">todo編集</h2>
        <div class="card-body">
          <%= render 'shared/error_messages', object: form.object %>
        <div class="form-group">
          <p>状態</p>
          <%= form.select :status,Task.statuses.keys.to_a, class: 'form-control' %>
        </div>
        <div class="form-group">
          <p>タスク内容</p>
          <%= form.text_field :content, class: 'form-control', placeholder: "内容" %>
        </div>
        <div class="form-group">
          <p>目標終了日</p>
          <%= form.date_field	 :target_at, class: 'form-control', placeholder: "パスワード" %>
        </div>
        <div class="form-group">
          <p>開始日</p>
          <%= form.date_field	 :completed_at, class: 'form-control', placeholder: "パスワード（再入力）" %>
        </div>
        <div class="form-group">
          <%= form.submit "todo編集", class: "btn btn-info btn-lg form-submit" %>
        </div>
    <% end %>
    </div>